{
  "name": "javascript-notion-library",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "repository": "git@github.com:Steven-J-Alves/javascript-notion-library.git",
  "author": "Steven Alves <stevenalves512@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clear": "rimraf lib",
    "prepush": "lint && test:coverage",
    "prepare": "husky install",
    "lint": "eslint src/*.js",
    "lint:fix": "eslint src/*.js --fix",
    "watch": "build --watch",
    "test": "mocha tests/**/*.ts --require @babel/register",
    "test:tdd": "mocha tests/**/*.js --require @babel/register --watch",
    "test:coverage": "nyc && test",
    "build": "npm run clear && ./node_modules/.bin/babel --out-dir lib src",
    "build:watch": "npm run build -- --watch",
    "build:umd": "./node_modules/.bin/webpack --output-filename notion-wrapper.umd.js",
    "build:umd:min": "./node_modules/.bin/webpack --output-filename notion-wrapper.umd.min.js -p",
    "build:all": "npm run build && npm run build:umd && npm run build:umd:min"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 80,
    "functions": 80,
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.18.2",
    "@babel/node": "^7.18.6",
    "@babel/preset-env": "^7.18.2",
    "@babel/register": "^7.17.7",
    "babel-loader": "^8.2.5",
    "chai": "^4.3.6",
    "cross-env": "^7.0.3",
    "eslint": "^8.16.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-mocha": "^10.0.5",
    "husky": "^8.0.1",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "sinon": "^14.0.0",
    "sinon-chai": "^3.7.0",
    "sinon-stub-promise": "^4.0.0",
    "typescript": "^4.7.4",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "node-fetch": "^3.2.6"
  }
}
