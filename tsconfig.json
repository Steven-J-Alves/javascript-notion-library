{
  "ts-node": { "compilerOptions": { "module": "ESNext", "types": ["node"] } },
  "compilerOptions": {
    "outDir": "./dist-ts",
    "module": "ESNext",
    "moduleResolution": "node",                    
    "target": "esnext",
    "lib": ["esnext", "DOM", "DOM.Iterable", "WebWorker"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitThis": false,
    "types": [
      "mocha",
      "node"
   ],
   "typeRoots": [
     "./node_modules/@types"
   ]
  },
  "include": [
    "./src/*.ts",
    "./src/**/*.ts"
  ],
  "exclude": ["node_modules/", "dist/", "lib/"]
}
